    "@babel/runtime": "7.3.4",
    "babel-loader": "8.0.5",
    "browser-cookies": "1.2.0",
    "browserslist": "4.4.2",
    "css-loader": "2.1.0",
    "cssnano": "4.1.10",
    "element-remove": "1.0.4",
    "html-webpack-plugin": "3.2.0",
    "http-server": "0.11.1",
    "lit-element": "2.0.0-rc.3",
    "postcss-easy-import": "3.0.0",
    "postcss-loader": "3.0.0",
    "postcss-preset-env": "6.6.0",
    "webpack": "4.29.6",
    "webpack-cli": "3.0.8",
    "xo": "0.21.1"
  },
  "xo": {
    "envs": [
      "browser",
      "node"
    ],
    "extensions": [
      ".lit"
    ],
    "rules": {
      "max-len": [
        "error",
        {
          "code": 80,
          "ignoreUrls": true
        }
      ],
      "capitalized-comments": "off"
    }
